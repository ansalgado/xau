@page "{id:int?}"
@model xau.Pages.Entregas.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Entrega</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Entrega.ID" />
            <div class="form-group">
                <label asp-for="Entrega.Fecha" class="control-label"></label>
                <input asp-for="Entrega.Fecha" class="form-control" />
                <span asp-validation-for="Entrega.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrega.Peso" class="control-label"></label>
                <input asp-for="Entrega.Peso" class="form-control" />
                <span asp-validation-for="Entrega.Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrega.Recolector" class="control-label"></label>
                <input asp-for="Entrega.Recolector.Nombre" class="form-control" />
                <span asp-validation-for="Entrega.Recolector.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrega.Proveedor" class="control-label"></label>
                <input asp-for="Entrega.Proveedor.Nombre" class="form-control" />
                <span asp-validation-for="Entrega.Proveedor.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
