@page "{id:int?}"
@model xau.Pages.Entregas.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<h2>Borrar</h2>

<h3>¿Está seguro que quiere borrar esta Entrega?</h3>
<div>
    <h4>Entrega</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Entrega.Fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entrega.Fecha)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entrega.Peso)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entrega.Peso)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entrega.LeyRecuperable)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entrega.LeyRecuperable)
        </dd>
        <dt>
            Total Fino
        </dt>
        <dd>
            @Model.Entrega.CalcularFino(Model.Entrega.Peso, Model.Entrega.LeyRecuperable).ToString("0.00")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entrega.Recolector)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entrega.Recolector.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Entrega.Proveedor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Entrega.Proveedor.Nombre)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Entrega.ID" />
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        <a asp-page="./Index">Volver a la Lista</a>
    </form>
</div>
